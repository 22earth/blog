{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "DOM",
      "es2017",
    ],
    "noImplicitAny": true,
    "target": "es6",
    "allowJs": true,
    //定义类型定义文件的根目录
    "esModuleInterop": true,
    // 引入 JSON
    "resolveJsonModule": true,
    "module": "commonjs",
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
